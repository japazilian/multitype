<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="MultiType"
            id="MultiType">
      </category>
      <view
            name="File List"
            icon="res/file.png"
            category="MultiType"
            class="multitype.views.FileList"
            id="multitype.views.FileList">
      </view>
      <view
            name="User List"
            icon="res/users.png"
            category="MultiType"
            class="multitype.views.UserList"
            id="multitype.views.UserList">
      </view>
      <view
            name="View Driver (debug)"
            icon="icons/sample.gif"
            category="MultiType"
            class="multitype.views.ViewDriver"
            id="multitype.views.ViewDriver">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="multitype.views.FileList">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="MultiType Action Set"
            visible="true"
            id="MultiType.actionSet">
         <menu
               label="MultiType"
               id="multitypeMenu">
            <separator
                  name="multitypeGroup">
            </separator>
         </menu>
         <action
               label="Disconnect"
               icon="res/user.png"
               class="multitype.actions.DisconnectAction"
               menubarPath="multitypeMenu/multitypeGroup"
               id="multitype.actions.DisconnectAction">
         </action>
         <action
               label="Login"
               icon="res/icon.png"
               class="multitype.actions.LoginWindowAction"
               tooltip="MultiType Login"
               menubarPath="multitypeMenu/multitypeGroup"
               toolbarPath="multitypeGroup"
               id="multitype.actions.LoginWindowAction">
         </action>
      </actionSet>
   </extension>

</plugin>
